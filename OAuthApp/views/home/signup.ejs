<%- include('../_partial/_header') -%>



<div class="row">
    <div class="col-lg-4 col-md-6 mx-auto my-auto">
        <h1 class="mt-5 mb-5">OAuth Application</h1>
        <form method="POST" action="/signup">
            <input type="text" class="form-control rounded-pill mb-3" placeholder="Username" name="username">
            <input type="text" class="form-control rounded-pill mb-3" placeholder="Email" name="email">
            <input type="password" class="form-control rounded-pill mb-3" placeholder="Password" name="password">
            <input type="password" class="form-control rounded-pill mb-3" placeholder="Re-password" name="repassword">

            <input type="submit" class="btn btn-primary rounded-pill w-100 mb-2" value="Daftar">
            <a href="#" class="align-self-end">Lupa Password?</a>
            <p class="mt-3 mb-3">-atau masuk dengan-</p>
            <div class="row">
                <div class="col-6">
                    <button type="submit" class="btn btn-primary rounded-pill w-100 mb-2">Google</button>
                </div>
                <div class="col-6">
                    <button type="submit" class="btn btn-primary rounded-pill w-100 mb-2">Facebook</button>
                </div>
            </div>
        </form>
    </div>
</div>


